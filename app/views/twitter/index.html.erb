<div class="input-group">
  <%= form_tag(root_path, :method => "get") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Tweets", class: 'form-control' %>
    <span class="input-group-btn">
      <%= submit_tag "Search", class: 'btn btn-default' %>
    </span>
  <% end %>
</div>
<br>

<%= render partial: 'show_tweets', locals: { tweets: @tweets } %>
